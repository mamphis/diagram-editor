{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "module": "es6",
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["DOM","ES2015","ES2017"],
    "typeRoots": [
      "lib/types/**",
      "node_modules/@types",
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "lib/types/**/*"
  ]
}